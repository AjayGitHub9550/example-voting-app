name: CI/CD to EKS

on:
  push:
    branches: [ "main" ]

permissions:
  id-token: write
  contents: read

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Configure AWS credentials via OIDC
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: arn:aws:iam::131676643044:role/build-role
          aws-region: us-east-1

      - name: Login to Amazon ECR
        id: login-ecr
        uses: aws-actions/amazon-ecr-login@v2

      - name: Build and Push Vote Service
        run: |
          IMAGE_URI=${{ steps.login-ecr.outputs.registry }}/vote:latest
          docker build -t $IMAGE_URI ./vote
          docker push $IMAGE_URI

      - name: Build and Push Result Service
        run: |
          IMAGE_URI=${{ steps.login-ecr.outputs.registry }}/result:latest
          docker build -t $IMAGE_URI ./result
          docker push $IMAGE_URI

      - name: Build and Push Worker Service
        run: |
          IMAGE_URI=${{ steps.login-ecr.outputs.registry }}/worker:latest
          docker build -t $IMAGE_URI ./worker
          docker push $IMAGE_URI


      - name: Update Kubernetes Deployment
        run: |
          aws eks update-kubeconfig --name my-eks-cluster --region <your-region>
          kubectl apply -f k8s-specifications/*
